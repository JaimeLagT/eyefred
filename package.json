{
  "name": "eyefred",
  "version": "1.0.0",
  "productName": "Eyefred",
  "description": "Eyefred",
  "main": "frontend/main.js",
  "type": "commonjs",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cd frontend/renderer && npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "npm run build:renderer && electron-builder",
    "build:renderer": "cd frontend/renderer && npm run build",
    "build:css": "cd frontend && npm run build:css",
    "dist": "npm run build:renderer && electron-builder --publish=never",
    "pack": "npm run build:renderer && electron-builder --dir",
    "rebuild": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "Jaime Lagunas",
  "license": "ISC",
  "build": {
    "appId": "com.eyefred.app",
    "productName": "Eyefred",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "frontend/main.js",
      "frontend/preload.js",
      "frontend/start-python.js",
      "frontend/renderer/dist/**/*",
      "backend/bindings.json",
      "backend/actions.js",
      "backend/build/**/*",
      "backend/dist/**/*",
      "assets/**/*",
      "!frontend/renderer/src/**/*",
      "!frontend/renderer/node_modules/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/__pycache__/**/*",
          "!**/*.pyc"
        ]
      },
      {
        "from": "node_modules/@nut-tree-fork/nut-js",
        "to": "resources/node_modules/@nut-tree-fork/nut-js",
        "filter": [
          "**/*",
          "!**/__pycache__/**/*",
          "!**/*.pyc"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/@nut-tree-fork/**/*",
      "node_modules/robotjs/**/*",
      "backend/dist/**"
    ],
    "mac": {
      "icon": "assets/eyefredIcon.icns",
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/eyefredIcon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "icon": "assets/eyefredIcon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "electron-squirrel-startup": "^1.0.1",
    "electron-store": "8.1.0",
    "ps-list": "^8.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "robotjs": "^0.6.0",
    "tree-kill": "^1.2.2"
  },
  "overrides": {
    "electron-store": "8.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "electron": "^36.3.1",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.3"
  }
}
