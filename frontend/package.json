{
  "name": "eyefred",
  "version": "1.0.0",
  "description": "Gesture-driven OS control with Electron and Python backend",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:css": "node_modules/.bin/tailwindcss -i ./src/index.css -o ./dist/output.css --minify",
    "dev": "concurrently -k -r \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "cd renderer && npm run dev",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.eyefred.app",
    "productName": "Eyefred",
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!renderer/node_modules/.cache"
    ],
    "directories": {
      "buildResources": "../assets"
    },
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend"
      }
    ],
    "mac": {
      "icon": "../assets/eyefredIcon.icns"
    },
    "win": {
      "icon": "../assets/eyefredIcon.ico"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@eslint/json": "^0.12.0",
    "@tailwindcss/postcss": "^4.1.7",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^36.3.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.1.0",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.7",
    "vite": "^6.3.5",
    "wait-on": "^8.0.3"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@fontsource/roboto": "^5.2.5",
    "@mui/icons-material": "^7.1.0",
    "@mui/material": "^7.1.0",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "bootstrap": "^5.3.6",
    "lucide-react": "^0.511.0",
    "react-bootstrap": "^2.10.10",
    "react-icons": "^5.5.0"
  }
}
